{
  "name": "nuzlocke-tracker",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "description": "Nuzlocke Tracker Desktop App",
  "author": "Theol",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "start-electron": "electron .",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "firebase": "^12.8.0",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.3",
    "react-scripts": "5.0.1",
    "react-select": "^5.10.1"
  },
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^24.11.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.nuzlocke.tracker",
    "productName": "Nuzlocke Tracker",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": "nsis"
    }
  }
}
